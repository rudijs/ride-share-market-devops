description "Manage Kibana"
author "KlixPlus PTY LTD"

start on virtual-filesystems
stop on runlevel [06]

respawn
respawn limit 10 5

setuid <%= @settings["user"] %>
setgid <%= @settings["user"] %>

script
exec <%= @settings["extract_path"] %>/bin/kibana >> <%= @settings["log_path"] %>/<%= @settings["log_file"] %> 2>&1
end script
